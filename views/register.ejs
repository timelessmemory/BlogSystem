<div class="container">

    <form class="form-signin" action="/register" method="post">
        <%if(error!=undefined&&error){%>
        <h2 style="color:red;"><%=error%></h2>
        <%}%>
        <h2 class="form-signin-heading">请注册</h2>
        <input type="text" class="input-block-level" placeholder="用户名" name="name">
        <input type="password" class="input-block-level" placeholder="密码" name="password">
        <input type="password" class="input-block-level" placeholder="确认密码" name="password2">
        <button class="btn btn-large btn-primary" type="submit">注册</button>
    </form>

</div>