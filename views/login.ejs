<div class="container">

    <form class="form-signin" action="/login" method="post">
        <%if(error!=undefined&&error){%>
        <h2 style="color:red;"><%=error%></h2>
        <%}%>
        <h2 class="form-signin-heading">请登录</h2>
        <input type="text" class="input-block-level" placeholder="用户名" name="name" <%if(username!=undefined&&username){%> value=<%=username%> <%}%> />
        <input type="password" class="input-block-level" placeholder="密码" name="password" <%if(password!=undefined&&password){%> value=<%=password%> <%}%> />
        <label class="checkbox">
            <input type="checkbox" value="remember-me" name="rem">记住我
        </label>
        <button class="btn btn-large btn-primary" type="submit">登录</button>
    </form>

</div>